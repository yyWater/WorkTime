<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape >
            <corners android:radius="5dip" />
            <solid android:color="@color/color_gray_deep" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <corners android:radius="5dip" />
            <solid android:color="@color/color_orange_gold" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@color/color_orange_main" />
        </shape>
    </item>
    <item>
        <shape >
            <corners android:radius="5dip" />
            <solid android:color="@color/color_orange_main" />
        </shape>
    </item>
</selector>
